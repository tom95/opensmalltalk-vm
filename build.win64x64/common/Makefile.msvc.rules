.SUFFIXES:	.c .cpp .o .s .rc .res .dep

$(info OBJDIR is $(OBJDIR))

DEPFLAGS = -MT $@ -MMD -MP -MF deps/$(*F).Td
ALLFLAGS = $(DEPFLAGS) $(CFLAGS) $(INCLUDES) $(DEFS)
POSTCOMPILE = sed '/^$$/d' <deps/$(*F).Td | sed '/^.*:$$/d' | sed 's/ [^ ]*:/:/' | sed 's/^build[^/]*/$$(BUILD)/' > deps/$(*F).d; rm deps/$(*F).Td; touch -r $< deps/$(*F).d

#############################################################################
# Rules for automated builds
#

#.c.o:
#	$(CC) /Fo$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $(subst /,\\,$<)
#

.c.o:
	$(CC) /Fo$(OBJDIR)/$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

$(OBJDIR)/%.o: %.c
	$(CC) /Fo$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

.cpp.o:
	$(CC) /Fo$(OBJDIR)/$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

# This is causing the plugin directory to be repeated in the /F
#$(OBJDIR)/%.o: %.cpp
#	$(CC) /Fo$(OBJDIR)/$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

$(OBJDIR)/%.o: %.cpp
	$(CC) /Fo$@ $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

.rc.res:
	$(RC) $(RCFLAGS) /fo $@ $<

.c.dep:
	$(CC) -M -o $(notdir $@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

.asm.o:
	$(AS) /Fo$(OBJDIR)/$@ $(DEFS) -c $<

$(OBJDIR)/%.o: %.asm
	$(AS) /Fo$@ $(DEFS) -c $<
